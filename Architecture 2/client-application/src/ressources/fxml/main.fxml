<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.MainController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <Label text="Username:"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1"/>
    <Label text="Password:" GridPane.rowIndex="2"/>
    <TextField fx:id="passwordField" GridPane.rowIndex="3"/>
    <Button text="Login" onAction="#handleLoginButtonAction" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
</GridPane>
